<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harine.virgotest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="30" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" /> <!-- weather -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 禁用系统锁屏 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:name="com.harine.virgotest.MyApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.StatusTest" >
        <activity android:name="com.harine.virgotest.ui.ScrollTextActivity" />
        <activity android:name="com.harine.virgotest.ui.Text2SpeechActivity" />
        <activity android:name="com.harine.virgotest.ui.PermissionTestActivity" />
        <activity android:name="com.harine.virgotest.ui.WeatherDemoActivity" />
        <activity android:name="com.harine.virgotest.ui.ImageAnimationActivity" />
        <activity
            android:name="com.harine.virgotest.ui.FashionClockActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:taskAffinity="" />
        <activity android:name="com.harine.virgotest.ui.AlarmProgramActivity" />
        <activity android:name="com.harine.virgotest.ui.GradientShowActivity" />
        <activity android:name="com.harine.virgotest.ui.FileTestActivity" />
        <activity android:name="com.harine.virgotest.ui.LrcTestActivity" />
        <activity android:name="com.harine.virgotest.ui.DisplayControlActivity" />
        <activity android:name="com.harine.virgotest.ui.ServerClientActivity" />
        <activity android:name="com.harine.virgotest.ui.ImageMagicActivity" />
        <activity android:name="com.harine.virgotest.ui.SocketPlayActivity" />
        <activity android:name="com.harine.virgotest.ui.VideoActivity" />
        <activity android:name="com.harine.virgotest.ui.MultiSocketActivity" />
        <activity android:name="com.harine.virgotest.ui.ComponentActivity" />
        <activity android:name="com.harine.virgotest.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GradientShowActivity">

    <com.harine.virgotest.component.VirgoGradientView
        android:id="@+id/gradientView"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:vgMode="mode_round"
        app:vgRoundRadious="10dp"
        app:vgGradientMode="gradient_linear"
        app:vgLinearAngle="45"/>

    <com.harine.virgotest.component.VirgoWeatherView
        android:id="@+id/weatherView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCyan"/>

    <com.harine.virgotest.component.clock.VirgoDigitalClockView
        android:id="@+id/digitClock"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/weatherView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PermissionTestActivity">

    <com.harine.virgotest.component.VirgoRainView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/imgColor"
        android:background="@color/black"
        android:layout_width="@dimen/img_100"
        android:layout_height="@dimen/img_100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Board"
        android:onClick="onPicker"/>

</RelativeLayout>